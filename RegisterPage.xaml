<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SalonulNOST.RegisterPage"
             Title="Register">

    <VerticalStackLayout Padding="30,0" Spacing="20">
        <Label Text="Create a new account" FontSize="24" HorizontalOptions="Center"/>

        <Entry x:Name="NameEntry" Placeholder="Full Name"/>
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True"/>
        <Entry x:Name="PhoneEntry" Placeholder="Phone Number" Keyboard="Telephone"/>

        <Button Text="Register" Clicked="OnRegisterButtonClicked"/>
    </VerticalStackLayout>
</ContentPage>
