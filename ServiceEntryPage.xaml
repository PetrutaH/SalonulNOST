<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SalonulNOST.ServiceEntryPage"
             Title="Adaugă Serviciu">

    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="Adaugă un nou serviciu" FontSize="20" HorizontalOptions="Center" />

            <Entry x:Name="nameEntry" Placeholder="Nume Serviciu" />
            <Entry x:Name="priceEntry" Placeholder="Preț Serviciu" Keyboard="Numeric" />

            <Button Text="Adaugă Serviciu" Clicked="OnAddServiceClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
