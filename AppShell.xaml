<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:SalonulNOST"
       x:Class="SalonulNOST.AppShell"
       Shell.FlyoutBehavior="Disabled"
       Title="SalonulNOST">

    <TabBar>
        <ShellContent Title="Welcome" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="Our Service Lists" ContentTemplate="{DataTemplate local:ServicesPage}" />
        <ShellContent Title="Appointment service" ContentTemplate="{DataTemplate local:AppointmentPage}" />
        <ShellContent Title="Appointments List" ContentTemplate="{DataTemplate local:AppointmentsPage}" />
        <ShellContent Title="Add Service" ContentTemplate="{DataTemplate local:ServiceEntryPage}" />
    </TabBar>

    <!-- Adăugarea unui meniu pentru logare și profil -->
    <MenuItem Text="Profile" Clicked="OnProfileMenuClicked" />
    <MenuItem Text="Logout" Clicked="OnLogoutMenuClicked" />
</Shell>
