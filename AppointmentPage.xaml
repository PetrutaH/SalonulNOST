<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SalonulNOST.AppointmentPage"
             Title="Programare">
    <StackLayout Padding="10">
        <Label Text="Alege serviciul" />
        <Picker x:Name="servicePicker" Title="Selectează un serviciu" />

        <Label Text="Alege data programării" />
        <DatePicker x:Name="appointmentDatePicker" />

        <Button Text="Confirmă Programarea" Clicked="OnConfirmAppointmentClicked" />
    </StackLayout>
</ContentPage>
