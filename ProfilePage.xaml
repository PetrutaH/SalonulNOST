<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SalonulNOST.ProfilePage"
             Title="Profile">

    <VerticalStackLayout Padding="30,0" Spacing="20">
        <Label Text="Your Profile" FontSize="24" HorizontalOptions="Center"/>

        <Label Text="Email: " x:Name="EmailLabel"/>

        <Label Text="Name: " x:Name="NameLabel"/>

        <Label Text="Phone Number: " x:Name="PhoneLabel"/>

        <Button Text="Logout" Clicked="OnLogoutButtonClicked"/>
    </VerticalStackLayout>
</ContentPage>
